# Environment Configuration for AromaHut
# Copy this file to .env and fill in your actual values

# MongoDB connection string
MONGO_URI=your_mongodb_connection_string

# Razorpay credentials
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# JWT secret for admin authentication
JWT_SECRET=your_jwt_secret

# Server port (optional, defaults to 5000)
PORT=5000

# Additional email for order notifications (optional)
# If set, order confirmation emails will also be sent to this address
# Example: ADDITIONAL_NOTIFICATION_EMAIL=manager@aromahut.com
ADDITIONAL_NOTIFICATION_EMAIL=